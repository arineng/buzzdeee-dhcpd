#################################
# <%= name network netmask %>
#################################
  subnet <%= @network %> netmask <%= @netmask %> {
    option subnet-mask <%= @netmask %>;
<% if @routers -%>
    option routers <%= @routers %>;
<% end -%>
<% if @range -%>
    range <%= @range %>;
<% end -%>

<% Array(options).each do |opt| -%>
    option <%= opt %>;
<% end -%>
<% Array(parameters).each do |param| -%>
    <%= param %>;
<% end -%>

