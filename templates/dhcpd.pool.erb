#################################
# <%= name network mask %>
#################################
subnet <%= network %> netmask <%= mask %> {
  option subnet-mask <%= mask %>;
<% if gateway -%>
  option routers <%= gateway %>;
<% end -%>
<% if range -%>
    range <%= range %>;
<% end -%>

<% if options.is_a? Array -%>
<%   options.each do |opt| -%>
  option <%= opt %>;
<%   end -%>
<% elsif options != '' -%>
  option <%= options %>;
<% end -%>
<% if parameters.is_a? Array -%>
<%   parameters.each do |param| -%>
  <%= param %>;
<%   end -%>
<% elsif parameters != '' -%>
  <%= parameters %>;
<% end -%>
}

