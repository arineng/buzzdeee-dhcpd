    host <%= host %> {
<% if comment != '' -%>
      # <%= comment %>
<% end -%>
      hardware ethernet   <%= mac %>;
      fixed-address       <%= ip %>;
<% if nextserver -%>
      next-server         <%= nextserver %>;
<% end -%>
<% if filename -%>
      filename            "<%= filename %>";
<% end -%>
<% if rootpath -%>
      option root-path    "<%= rootpath %>";
<% end -%>
<% if rfc1048 -%>
      always-reply-rfc1048 "true";
<% end -%>
      option host-name    "<%= name %>";
    }
