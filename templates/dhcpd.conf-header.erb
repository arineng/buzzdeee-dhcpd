# ----------
# dhcpd.conf
# ----------
<% if authoritative -%>
authoritative;
<% else -%>
not authoritative;
<% end -%>
default-lease-time <%= default_lease_time %>;
max-lease-time <%= max_lease_time %>;

# ----------
# Options
# ----------
option domain-name "<%= dnsdomain %>";
option domain-name-servers <%= nameservers %>;


